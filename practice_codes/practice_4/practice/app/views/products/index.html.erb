<h1>Products</h1>

<% if user_signed_in? %>
  <%= link_to "New product", new_product_path %>
<% end %>

<div id="products">
  <% @products.each do |product| %>
    <div>
      <%= link_to product.name, product %>
    </div>
  <% end %>

  <% unless user_signed_in? %>
    <%= link_to "Login", new_user_session_path %>
  <% end %>
</div>
