<body>
<nav style="padding: 10px; background: #f2f2f2;">
  <%= link_to "Home", root_path, style: "margin-right: 10px;" %>

  <% if user_signed_in? %>
    <span style="margin-right: 10px;">Welcome, <%= current_user.email %></span>
    <%= button_to "Log out", destroy_user_session_path, method: :delete, style: "display: inline;" %>
  <% else %>
    <%= link_to "Log in", new_user_session_path, style: "margin-right: 10px;" %>
    <%= link_to "Sign up", new_user_registration_path %>
  <% end %>
</nav>

<main style="padding: 20px;">
  <%= yield %>
</main>
</body>
